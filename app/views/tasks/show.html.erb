<h1><%= @task[:title] %></h1>
<p><%= @task[:details] %></p>
<p>
  <% if @task[:completed] %>
    <i class="fa-regular fa-square-check"></i> This task is completed
  <% else %>
    <i class="fa-regular fa-square"></i> This task is not completed yet
  <% end %>
</p>
<p><%= link_to "Edit task", task_edit_path(@task) %></p>
<hr />
<p><%= link_to "Return to My Tasks list", tasks_path %></p>

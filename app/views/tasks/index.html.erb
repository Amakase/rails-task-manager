<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <li>
    <input type="checkbox" id="completed" name="completed" <%= task[:completed] ? "checked" : "" %> />
    <%= link_to task[:title], task_path(task) %>
    <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
<% end %>
<p><%= link_to "Add a new task", tasks_new_path %></p>
